<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.MaterialEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/description_material"
                android:layout_width="368dp"
                android:layout_height="48dp"
                android:layout_below="@+id/category_material"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="20dp"

                android:autofillHints="Title"
                android:drawableStart="@drawable/ic_baseline_closed_caption_24"
                android:hint="Description"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/title_material"
                android:layout_width="368dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="252dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="Title"
                android:drawableStart="@drawable/ic_baseline_feed_24"
                android:hint="Title"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/category_material"
                android:layout_width="368dp"
                android:layout_height="48dp"
                android:layout_below="@+id/title_material"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="Title"
                android:hint="Category"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:textColor="@color/black"
                app:drawableEndCompat="@drawable/ic_baseline_expand_more_24"
                app:drawableStartCompat="@drawable/ic_baseline_category_24" />

            <Button
                android:id="@+id/add_category"
                android:layout_width="370dp"
                android:layout_height="58dp"
                android:layout_below="@+id/description_material"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="244dp"
                android:text="Change Material" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>